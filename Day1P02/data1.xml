<?xml version="1.0" encoding="UTF-8"?>
<!-- applicationContext.xml -->
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="battery" class="com.example.Battery">
        <constructor-arg value="1" />
        <constructor-arg value="Rechargeable Battery" />
        <constructor-arg value="15.99" />
        <constructor-arg value="true" />
    </bean>

    <bean id="disc" class="com.example.Disc">
        <constructor-arg value="2" />
        <constructor-arg value="DVD Disc" />
        <constructor-arg value="5.99" />
        <constructor-arg value="700" />
    </bean>

</beans>
